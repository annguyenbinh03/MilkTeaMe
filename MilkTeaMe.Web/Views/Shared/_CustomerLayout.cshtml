<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MilkTeaMe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/customer-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center px-2">          
                <div>
                    <img height="40" src="https://res.cloudinary.com/drp7eohjg/image/upload/v1745055788/logo_qnanbp.jpg" />
                </div>
                <form asp-action="Index" method="get">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" name="search" placeholder="Tìm kiếm sản phẩm..." />
                    </div>
                </form>
                <div class="d-flex">
                    <button class="btn me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas" aria-controls="cartOffcanvas" onclick="showCart()">
                        <i class="bi bi-cart"></i>
                    </button>
                    <div class="dropdown mx-2">
                        <button class="btn " type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a asp-controller="Orders" asp-action="order-history" class="dropdown-item">
                                    <i class="bi bi-receipt"></i> Lịch sử mua hàng
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-person-circle"></i> Thông tin cá nhân
                                </a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Auth" asp-action="Logout" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>   
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-5 text-white">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-2">
                    <h5>MilkTeaMe</h5>
                    <p>Thưởng thức trà sữa thơm ngon mỗi ngày!</p>
                </div>
                <div class="col-md-4 mb-2">
                    <h6>Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Trang chủ</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Thực đơn</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Cửa hàng</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Chính sách bảo mật</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-2">
                    <h6>Liên hệ</h6>
                    <p>Email: contact@milkteame.com</p>
                    <p>Hotline: 0123 456 789</p>
                    <div>
                        <i class="bi bi-facebook me-2"></i>
                        <i class="bi bi-instagram me-2"></i>
                        <i class="bi bi-twitter-x"></i>
                    </div>
                </div>
            </div>
            <hr class="bg-light" />
            <div class="text-center small">
                &copy; 2025 - MilkTeaMe.Web - All rights reserved
            </div>
        </div>
    </footer>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="cartOffcanvasLabel">Giỏ hàng</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body" id="cartContent">
            <p>Đang tải...</p>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/customer.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
