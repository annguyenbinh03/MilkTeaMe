@model MilkTeaMe.Web.Models.Requests.ForgetPasswordRequest
<form method="post" asp-action="ForgetPassword" asp-controller="Auth">
	<div class="form-outline mb-4 form-group">
		<label asp-for="Email" class="form-label"></label>
		<input asp-for="Email" id="Email" class="form-control form-control-lg" placeholder="Nhập địa chỉ email" type="email" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	@if (ViewBag.NotificationFull != null)
	{
		<div class="alert alert-success text-center" role="alert">
			@ViewBag.NotificationFull
		</div>
	}
	<div class="d-flex justify-content-center">
		<button type="submit" class="btn btn-primary btn-block mb-4 w-50">Đặt lại mật khẩu</button>
	</div>
</form> 
