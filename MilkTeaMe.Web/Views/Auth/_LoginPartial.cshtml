@model MilkTeaMe.Web.Models.Requests.LoginRequest
<form method="post" asp-action="Login" asp-controller="Auth">
	<div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
		<p class="lead fw-normal mb-0 me-3">Đăng nhập thông qua</p>
		<a href="/Auth/GoogleLogin" class="btn btn-primary mx-1 rounded-circle text-center">
			<i class="bi bi-google"></i>
		</a>
		<a href="/Auth/GoogleLogin" class="btn btn-primary mx-1 rounded-circle text-center">
			<i class="bi bi-google"></i>
		</a>
	</div>

	<div class="divider d-flex align-items-center my-4">
		<p class="text-center fw-bold mx-3 mb-0">Hoặc</p>
	</div>

	<div class="form-outline mb-4">
		<input asp-for="Username" id="loginName" class="form-control form-control-lg" placeholder="Nhập tên tài khoản" type="text" />
		<span asp-validation-for="Username" class="text-danger"></span>
	</div>

	<div class="form-outline mb-4">
		<input type="password" asp-for="Password" id="loginPassword" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>

	<div class="mb-4 d-flex justify-content-between">
		<div class="form-check mb-3 mb-md-0">
			<input class="form-check-input" type="checkbox" asp-for="RememberMe" id="loginCheck" />
			<label class="form-check-label" for="loginCheck">Lưu đăng nhập</label>
		</div>
		<div>
			<a href="#!">Quên mật khẩu</a>

		</div>
	</div>

	<div class="d-flex justify-content-center">
		<button type="submit" class="btn btn-primary btn-block mb-4 w-50">Đăng nhập</button>
	</div>
</form> 